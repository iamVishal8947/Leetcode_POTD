Time Complexity - O(n*log(n)) [Used Sorting]
Space Complexity - O(1)

-----------------------------------------------------------------------------------------------------------------------------------------------------------------------------
class Solution {
    public int largestPerimeter(int[] nums) {
        int len=nums.length;
        Arrays.sort(nums);

        for(int i=len-3;i>=0;i--){

            if(nums[i]+nums[i+1]>nums[i+2]){
                return nums[i]+nums[i+1]+nums[i+2];
            }
        }
        return 0;     
    }
}
